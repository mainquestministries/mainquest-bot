{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"experimentalDecorators": true,
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"module": "CommonJS", // CommonJS
        "moduleResolution": "Node",
		"baseUrl": "./",
		"paths": {
			"#lib/*": ["src/lib/*.ts"]
		}
	},
	"include": ["src"]
}
