// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql" //default postgresql
  url      = env("DATABASE_URL")
}

model guildconfig {
  id        String  @id
  p_channel String?
}

model Message {
  id              String  @id //user to send this message to
  message_content String  @default("Klopf, Klopf\nIn deiner heutigen Gebetszeit, denk doch auch kurz an diese Anliegen.")
  embeds          Embed[]
  repetitions     Int     @default(2) //2 Wochen lang
  modulo          Int     @default(4) //Einmal pro Woche
  disabled        Boolean @default(false)
}

model Embed {
  id                  Int      @id @default(autoincrement())
  Message             Message? @relation(fields: [messageId], references: [id])
  messageId           String?
  original_message_id String
  content             String
  author              String
  author_avatar_url   String
  title               String
  source              String
  color               Int?
  sended              Int      @default(0)
}

model Swallowed {
  id              String @id
  channel_id      String
  message_content String
  author_id       String
  guild           String
  new_id          String
}
